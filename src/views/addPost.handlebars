<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center">ADD POST</h1>
</section>

<!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
    <div class="container">

        <div class="row text-center">
            <div class="col-md-4 offset-md-4">
                <div class="section-header">
                    <h2 class="title">Add Post</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <form novalidate="novalidate" method="post" action="/post/add">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input class="form-control" id="name" name="title" type="text" placeholder="title *"
                                    required="required" data-validation-required-message="Please enter title.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <select name="category" id="category">
                                    {{#each categories}}
                                    <option value="volvo">{{name}}</option>
                                    {{/each}}
                                </select>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" id="content" name="content" placeholder="content *"
                                    required="required"
                                    data-validation-required-message="Please enter a content."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>

                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button class="main-btn" type="submit">Add</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>